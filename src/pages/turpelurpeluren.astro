---
import Layout from "@layouts/Layout.astro";
import LinkButton from "@components/LinkButton.astro";

---

<Layout title="turpelurpeluren.online">
  <!-- Redirect -->
  <meta http-equiv="refresh" content="0;url=https://turpelurpeluren.online" />

  <main id="main-content">
    <div class="not-found-wrapper">
      <h1 aria-label="404 Not Found">turpelurpeluren.online</h1>
      <!--span aria-hidden="true">¯\_(ツ)_/¯</span-->
      <p>Redirecting...</p>
      <p>Did nothing happen?</p>
      
      <LinkButton
        href="https://turpelurpeluren.online"
        className="my-6 underline decoration-dashed underline-offset-8 text-lg"
      >
        Here is a link.
      </LinkButton>
    </div>
  </main>

  <!--Footer /-->
</Layout>

<style>
  #main-content {
    @apply mx-auto flex max-w-3xl flex-1 items-center justify-center;
  }
  .not-found-wrapper {
    @apply mb-14 flex flex-col items-center justify-center;
  }
  .not-found-wrapper h1 {
    @apply text-3xl font-bold text-skin-accent;
  }
  .not-found-wrapper p {
    @apply mt-4;
  }
</style>
